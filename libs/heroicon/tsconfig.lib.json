{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "types": [],
        "target": "ES2022",
        "useDefineForClassFields": false
    },
    "exclude": [
        "jest.config.ts",
        "src/test-setup.ts",
        "src/**/*.spec.ts"
    ],
    "include": [
        "**/*.ts"
    ],
    "angularCompilerOptions": {
        "preserveSymlinks": true
    }
}
